<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.spring.mapper.UserMapper">
<!-- 多对多关系映射，使用1对多和多对1嵌套实现，注意映射关系的三张表的主键名称要不相同（uid,rid,urid），否则只能查到1条记录 -->
	<resultMap type="boot.spring.po.User" id="userMap">
        <id column="uid" property="uid" ></id>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="tel" property="tel" />
        <result column="age" property="age" />
        <collection property="user_roles" column="userid" ofType="boot.spring.po.User_role">  
            <id property="urid" column="urid" />
            <association column="roleid" property="role" javaType="boot.spring.po.Role">
	        	<id column="rid" property="rid"></id>
	        	<result column="rolename" property="rolename"/>
        	</association>  
        </collection>
    </resultMap>
    
    <select id="getusers" resultMap="userMap">
    	select * from sys_user order by uid
    </select>
    
    <select id="getUserByid" resultMap="userMap">
    	select * from sys_user left join user_role on sys_user.uid=user_role.userid left join
    	role on user_role.roleid=role.rid where sys_user.uid=#{uid}
    </select>
    
    <delete id="deleteuser" parameterType="int">
    	delete from sys_user where sys_user.uid=#{uid}
    </delete>
    
    <delete id="deleteuserrole" parameterType="int">
    	delete from user_role where user_role.userid=#{uid}
    </delete>
    
    <insert id="adduser" useGeneratedKeys="true" keyProperty="uid" parameterType="boot.spring.po.User">
    	 insert into sys_user (username,password,tel,age)
	  	 values (#{username},'1234',#{tel},#{age})
    </insert>
    
    <update id="updateuser" parameterType="boot.spring.po.User">
    	update sys_user set
    		tel=#{tel},age=#{age}
    	where sys_user.uid=#{uid}
    </update>
    <select id="getUidByusername" resultType="int" parameterType="String">
    	select uid from sys_user where username=#{username}
    </select>
</mapper>